<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85CFCE"
    tools:context=".DoctorInterface.ChangePasswordFragment">


    <TextView
        android:id="@+id/tvchangePass"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_signup"
        android:paddingLeft="10dp"
        android:text="Schimbare parola"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etChangePass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSavePass"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="185dp"
        android:layout_height="56dp"
        android:background="@drawable/background_signup"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Salvare"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

    <EditText
        android:id="@+id/etChangePass"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:ems="10"
        android:background="@drawable/background_login"
        android:hint="Introduceti parola veche"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/etNewPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844" />

    <EditText
        android:id="@+id/etNewPass"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Introduceti noua parola"
        android:inputType="textPassword"
        android:background="@drawable/background_login"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/etConfNewPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etConfNewPass"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Reintroduceti parola"
        android:inputType="textPassword"
        android:background="@drawable/background_login"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSavePass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>