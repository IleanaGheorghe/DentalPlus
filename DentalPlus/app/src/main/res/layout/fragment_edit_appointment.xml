<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorInterface.EditAppointment"
    android:background="#85CFCE">
        <LinearLayout
            android:id="@+id/llEditApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#85CFCE"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProgEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_signup"
                android:paddingLeft="10dp"
                android:text="Informatii despre programare"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDE"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Data:       "
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/etDataEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Introduceti data"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOIE"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Ora start:"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/etOraInceputEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Introduceti ora inceput"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOSE"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Ora end: "
                    android:textSize="16sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/etOraSfarsitEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Introduceti ora sfarsit"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDEditApp"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Doctor: "
                    android:textSize="16sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/spDoctorEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Doctor.."
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPEditApp"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Pacient:"
                    android:textSize="16sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/spPacientEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Pacient.."
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSEApp"
                    android:layout_width="100dp"
                    android:layout_height="39dp"
                    android:background="@drawable/background_login"
                    android:paddingLeft="10dp"
                    android:text="Serviciu:"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <Spinner
                    android:id="@+id/spServiciuEditApp"
                    android:layout_width="225dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/background_login"
                    android:hint="Serviciu.."
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvEditProg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/plus1"
                android:paddingLeft="10dp"
                android:text="Salvare informatii programare"
                android:textColor="@color/login"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDeleteProg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/delete2"
                android:paddingLeft="10dp"
                android:text="Stergere programare pacient"
                android:textColor="@color/login"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvNotifPat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/notificare"
                android:paddingLeft="10dp"
                android:text="Reminder programare pacient"
                android:textColor="@color/login"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


</FrameLayout>